<div class="form">
  <%= form_for(@task) do |t| %>
    <div class="form-group">
      <%= t.label :name, "Title"%>
      <%= t.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= t.label :duedate, "Due Date (YYYY-MM-DD)" %>
      <%= t.text_field :duedate, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= t.label :note, "Note" %>
      <%= t.text_area :note, class: "form-control" %>
    </div>
      <%= t.submit 'Submit', class: "btn btn-success" %>
  <% end %>
</div>
