<div class="container">
  <div class="row mt2 mb2 text-center">
    <div class="col-md-6 col-md-offset-3">
      <h1><%= @task.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ul>
        <li>Due Date: <%= @task.duedate %></li>
        <li>Note: <%= @task.note %></li>
      </ul>
    </div>
    <div class="col-md-6 col-md-offset-3 text-center">
      <%= link_to 'Back', tasks_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
